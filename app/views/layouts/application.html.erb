<!DOCTYPE html>
<html>
  <head>
    <title>Code2017</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

      <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

    <!-- Material Design Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>

  </head>

  <body>

    <nav>
        <div class="nav-wrapper light-blue darken">
          <%= link_to "Code2017", root_path, :class => "brand-logo" %>
          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
          <ul class="right hide-on-med-and-down">
            <li><a href="<%= root_path %>"><i class="material-icons">view_list</i></a></li>
            <li><a href="<%= pages_about_path %>"><i class="material-icons">perm_identity
</i></a></li>
            <li><a href="<%= pages_contact_path %>"><i class="material-icons">place</i></a></li>
          </ul>
          <ul class="side-nav" id="mobile-demo">
            <li><a href="<%= root_path %>"><i class="material-icons"></i>view_list</a></li>
            <li><a href="<%= pages_about_path %>"><i class="material-icons">perm_identity</i></a></li>
            <li><a href="<%= pages_contact_path %>"><i class="material-icons">place</i></a></li>
          </ul>
        </div>
      </nav>

      <div class="row">
        <div class="col m10 offset-m1">
          <%= yield %>
        </div>
      </div>

      <script>
        $(".button-collapse").sideNav();
      </script>

  </body>
</html>
